import libc as c
import libc.{stdout}

extern fn put_usize(usize, *c.FILE): Void = hscript_put_usize

extern fn puts(*u8): Void = puts

fn main(): Void {
    match Bytecode.B(1) {
            A -> {
                c.fputs(b"A", stdout())
            }
            B(val value) -> {
                c.fputs(b"B(", stdout())
                put_usize(value, stdout())
                c.fputs(b")\n", stdout())
            }
    }
}

// The bug shows up when enum contains a variant with a size
// that's not a multiple of 64 bits.
// Like A(u8, u64) here
enum Bytecode {
    A(u8, u64)
    B(usize)
}
