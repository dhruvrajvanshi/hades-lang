{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Hades",
	"patterns": [
		{
			"include": "#tokens"
		},
		{
			"include": "#comments"
		}
	],
	"fileTypes": [
		"hds"
	],
	"repository": {
		"comments": {
			"match": "(//[^\\n]*$)",
			"captures": {
				"1": {
					"name": "comment"
				}
			}
		},
		"tokens": {
			"patterns": [
				{
					"match": "\\b(def)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": { "name": "keyword" },
						"2": { "name": "entity.name.function" }
					}
				},
				{
					"match": "\\b(struct|type|enum)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": { "name": "keyword" },
						"2": { "name": "entity.name.type" }
					}
				},
				{
					"match": "\\b(def|struct|import|as|type|val|mut|trait|implementation|const|extension|for|where)\\b",
					"captures": {
						"0": { "name": "keyword" }
					}
				},
				{
					"match": "\\bextern\\b",
					"captures": {
						"0": { "name": "storage.modifier" }
					}
				},
				{
					"match": "\\bthis\\b",
					"captures": {
						"0": { "name": "variable.parameter" }
					}
				},
				{
					"match": "\\b(if|else|while|return|match|defer|move)\\b",
					"captures": {
						"0": { "name": "keyword.control" }
					}
				},
				{
					"match": "\\b(Void|Bool|u8|u16|u32|u64|i8|i16|i32|i64|f16|f32|f64)\\b",
					"captures": {
						"0": { "name": "entity.name.type" }
					}
				},
				{
					"match": "\\b(true|false)\\b",
					"captures": {
						"0": { "name": "constant.language" }
					}
				},
				{
					"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*\\s*)\\(",
					"captures": {
						"1": { "name": "entity.name.function" }
					}

				},
				{
					"match": "\\b\\d+(\\.\\d+)?\\b",
					"captures": {
						"0": { "name": "constant.numeric" }
					}
				},
				{
					"begin": "(b)(\")",
					"end": "\"",
					"beginCaptures": {
						"1": { "name": "emphasis" },
						"2": { "name": "string" }
					},
					"endCaptures": {
						"0": { "name": "string" }
					},
					"patterns": [
						{
							"match": "\\\\[\"nbr]",
							"captures": {
								"0": {
									"name": "constant.character.escape"
								}
							}
						},
						{
							"match": "[^\"]",
							"captures": {
								"0": {
									"name": "string"
								}
							}
						}
					]
				}
			]
		}
	},
	"scopeName": "hades"
}