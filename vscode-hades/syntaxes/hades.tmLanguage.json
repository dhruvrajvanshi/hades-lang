{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Hades",
	"patterns": [
		{
			"include": "#tokens"
		},
		{
			"include": "#comments"
		}
	],
	"fileTypes": [
		"hds"
	],
	"repository": {
		"comments": {
			"match": "(//[^\\n]*$)",
			"captures": {
				"1": {
					"name": "comment"
				}
			}
		},
		"tokens": {
			"patterns": [
				{
					"match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": { "name": "keyword" },
						"2": { "name": "entity.name.function" }
					}
				},
				{
					"match": "\\b(struct|type|enum)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": { "name": "keyword" },
						"2": { "name": "entity.name.type" }
					}
				},
				{
					"match": "\\b(fn|struct|use|pub|as|type|mut|trait|impl|const|for|where)\\b",
					"captures": {
						"0": { "name": "keyword" }
					}
				},
				{
					"match": "\\b(true|false)\\b",
					"captures": {
						"0": { "name": "constant.language" }
					}
				},
				{
					"match": "\\b\\d+(\\.\\d+)?\\b",
					"captures": {
						"0": { "name": "constant.numeric" }
					}
				},
				{
					"begin": "(b)(\")",
					"end": "\"",
					"beginCaptures": {
						"1": { "name": "emphasis" },
						"2": { "name": "string" }
					},
					"endCaptures": {
						"0": { "name": "string" }
					},
					"patterns": [
						{
							"match": "\\\\[\"nbr]",
							"captures": {
								"0": {
									"name": "constant.character.escape"
								}
							}
						},
						{
							"match": "[^\"]",
							"captures": {
								"0": {
									"name": "string"
								}
							}
						}
					]
				},
				{
					"begin": "(\")",
					"end": "\"",
					"beginCaptures": {
						"1": { "name": "string" }
					},
					"endCaptures": {
						"0": { "name": "string" }
					},
					"patterns": [
						{
							"match": "\\\\[\"nbr]",
							"captures": {
								"0": {
									"name": "constant.character.escape"
								}
							}
						},
						{
							"match": "[^\"]",
							"captures": {
								"0": {
									"name": "string"
								}
							}
						}
					]
				}
			]
		}
	},
	"scopeName": "hades"
}
