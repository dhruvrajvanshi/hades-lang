import libc as c;
import example.logging as log;

fn assert(condition: Bool, get_message: || -> *cchar): Void {
    if not condition {
        val message = get_message();
        log.fatal(b"Assertion failed");
        log.fatal(message);
        c.perror(message);
        c.exit(1);
    }
}

fn unreachable(message: || -> *cchar): Void {
    c.perror(message());
    c.exit(2);
}
