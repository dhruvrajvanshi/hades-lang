import glfw as glfw;
import gl as gl;

fn main_loop(window: *glfw.Window): Void {
    gl.clear(gl.GL_COLOR_BUFFER_BIT);

    window.swap_buffers();

    glfw.wait_events();
}

fn main(): Void {
    glfw.init();

    val window = glfw.create_window(640, 480, b"Hello World", nullptr, nullptr);

    glfw.make_context_current(window);

    while not window.should_close() {
        main_loop(window);
    }

    glfw.terminate();
}
